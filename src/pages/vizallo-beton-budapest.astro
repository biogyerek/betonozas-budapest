            <div class="space-y-4">
              <div class="flex items-start">
                <div class="bg-blue-600 w-2 h-2 rounded-full mt-2 mr-3"></div>
                <div>
                  <h4 class="font-semibold text-concrete-800">Kristályosító technológia</h4>
                  <p class="text-concrete-600">Víz hatására öngyógyító kristályok</p>
                </div>
              </div>
              <div class="flex items-start">
                <div class="bg-blue-600 w-2 h-2 rounded-full mt-2 mr-3"></div>
                <div>
                  <h4 class="font-semibold text-concrete-800">Magas vízzáróság</h4>
                  <p class="text-concrete-600">5 bar víznyomásig teljesen vízzáró</p>
                </div>
              </div>
              <div class="flex items-start">
                <div class="bg-blue-600 w-2 h-2 rounded-full mt-2 mr-3"></div>
                <div>
                  <h4 class="font-semibold text-concrete-800">Hosszú élettartam</h4>
                  <p class="text-concrete-600">50+ év tartós vízszigetelés</p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Alkalmazási területek -->

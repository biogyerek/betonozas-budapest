import Layout from '../components/Layout.astro';
import Header from '../components/Header.astro';
---

<Layout title="Vízálló Beton Budapest - WU Beton, Nedvességálló Betonozás | Pincék Vízszigetelése" 
        description="Vízálló beton Budapest ✓ WU beton technológia ✓ Pincék vízszigetelése ✓ Nedvességálló szerkezetek ✓ Kristályosító adalékok ✓ Ingyenes felmérés">

  <!-- Hero Section -->
  <section class="bg-gradient-to-br from-concrete-50 to-concrete-100 py-20 lg:py-28">
    <div class="max-w-screen-xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid lg:grid-cols-2 gap-12 items-center">
        <div>
          <h1 class="text-4xl lg:text-6xl font-bold text-concrete-800 font-heading mb-6">
            Vízálló Beton Budapest - <span class="text-primary-600">WU Beton</span> Vízszigetelés
          </h1>
          <p class="text-xl text-concrete-600 mb-8 leading-relaxed">
            Professzionális vízálló betonozás Budapesten! WU beton technológia pincék, alagsorok vízszigetelésére. Nedvességálló szerkezetek kristályosító adalékokkal.
          </p>
          <div class="flex flex-col sm:flex-row gap-4">
            <a href="/kapcsolat" class="bg-primary-600 hover:bg-primary-700 text-white font-semibold py-4 px-8 rounded-lg transition-colors duration-200 text-center">
              Ingyenes Vízszigetelési Felmérés
            </a>
            <a href="tel:+36301234567" class="border-2 border-primary-600 text-primary-600 hover:bg-primary-600 hover:text-white font-semibold py-4 px-8 rounded-lg transition-colors duration-200 text-center">
              +36 30 123 4567
            </a>
          </div>
        </div>
        <div class="relative">
          <div class="bg-concrete-200 rounded-2xl h-96 flex items-center justify-center">
            <span class="text-concrete-500 text-lg">Vízálló Beton Munkálatok</span>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Mi a vízálló beton szekció -->
  <section class="py-16 lg:py-24 bg-white">
    <div class="max-w-screen-xl mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="text-3xl lg:text-4xl font-bold text-concrete-800 font-heading mb-12 text-center">
        Mi a vízálló beton és WU beton technológia?
      </h2>
      <div class="grid md:grid-cols-2 gap-12 items-center">
        <div>
          <p class="text-lg text-concrete-600 mb-6">
            A vízálló beton (WU beton - Wasserundurchlässiger Beton) olyan speciális betonkeverék, amely kristályosító adalékanyagok segítségével vízzáróvá válik. Budapesten ideális megoldás pincék, alagsorok és nedves környezetben lévő szerkezetek vízszigetelésére.
          </p>
          <p class="text-lg text-concrete-600 mb-6">
            A WU beton technológia lényege, hogy a betonba kevert speciális adalékanyagok a víz jelenlétében kristályokat képeznek, amelyek eltömítik a beton mikro-pórusait és repedéseit, így vízzáró réteget hoznak létre.
          </p>
          <div class="bg-blue-50 p-6 rounded-xl border-l-4 border-blue-600">
            <h3 class="text-lg font-semibold text-blue-800 mb-2">Miért válassza a vízálló betont?</h3>
            <ul class="text-blue-700 space-y-2">
              <li>• Tartós vízszigetelés évtizedekig</li>
              <li>• Öngyógyító kristályok</li>

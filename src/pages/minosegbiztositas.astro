---
export const prerender = true;

const title = "Betonozás Minőségbiztosítása - Komplett Ellenőrzési Útmutató | Betonozás Budapest";
const description = "Professzionális minőségbiztosítási rendszer betonozáshoz ✓ Vizsgálati módszerek ✓ Ellenőrzési pontok ✓ Hibamegelőzés ✓ 15+ év tapasztalat.";
const canonical = "https://betonozasbudapest.hu/minosegbiztositas";

import Layout from '../components/Layout.astro';
import Header from '../components/Header.astro';
---

<Layout title={title} description={description} canonical={canonical}>
  <Header />
  <div class="min-h-screen bg-gray-50">
    <!-- Hero Section -->
    <section class="bg-gradient-to-r from-purple-900 to-purple-800 text-white py-16">
      <div class="container mx-auto px-4">
        <div class="max-w-4xl mx-auto text-center">
          <h1 class="text-4xl md:text-5xl font-bold mb-6">Betonozás Minőségbiztosítása</h1>
          <p class="text-xl mb-8">
            Komplett minőségbiztosítási rendszer a hibátlan betonozásért. Vizsgálati módszerek, 
            ellenőrzési pontok és minőségtanúsítási eljárások 15+ év szakmai tapasztalat alapján.
          </p>
          <div class="flex items-center justify-center space-x-6 text-sm">
            <span class="flex items-center">
              <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
              16 perc olvasás
            </span>
            <span class="flex items-center">
              <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 002 2z"></path>
              </svg>
              2024. március 25.
            </span>
          </div>
        </div>
      </div>
    </section>

    <!-- Article Content -->
    <article class="py-20">
      <div class="container mx-auto px-4">
        <div class="max-w-4xl mx-auto">
          <!-- Introduction -->
          <div class="bg-white rounded-lg shadow-lg p-8 mb-12">
            <div class="prose prose-lg max-w-none">
              <p class="text-xl text-gray-700 leading-relaxed mb-6">
                A minőségbiztosítás a betonozás legkritikusabb eleme. Egyetlen mulasztás évtizedekig 
                tartó problémákat okozhat. Ebben az útmutatóban bemutatjuk a teljes minőségbiztosítási 
                folyamatot a tervezéstől a végellenőrzésig.
              </p>
              
              <div class="bg-purple-50 border-l-4 border-purple-500 p-6 my-8">
                <h3 class="text-lg font-semibold text-purple-800 mb-2">Mit tanul meg ebből a cikkből?</h3>
                <ul class="text-purple-700 space-y-2">
                  <li>• A teljes minőségbiztosítási folyamat lépéseit</li>
                  <li>• A különböző vizsgálati módszerek alkalmazását</li>
                  <li>• Az ellenőrzési pontok meghatározását és dokumentálását</li>
                  <li>• A hibamegelőzés és hibajavítás módszereit</li>
                  <li>• A költséghatékony minőségbiztosítási rendszer kialakítását</li>
                </ul>
              </div>
            </div>
          </div>

          <!-- Section 1: QMS alapjai -->
          <div class="bg-white rounded-lg shadow-lg p-8 mb-12">
            <h2 class="text-3xl font-bold text-gray-800 mb-6">1. Minőségbiztosítási Rendszer Alapjai</h2>
            
            <div class="grid md:grid-cols-2 gap-8 mb-8">
              <div>
                <h3 class="text-2xl font-semibold text-gray-700 mb-4">Minőségbiztosítási Piramis</h3>
                <div class="space-y-3">
                  <div class="p-4 bg-red-50 border border-red-200 rounded-lg">
                    <h4 class="font-semibold text-red-800">1. Tervezési szakasz</h4>
                    <p class="text-red-700 text-sm">Specifikáció, anyagválasztás, keverékterv</p>
                  </div>
                  
                  <div class="p-4 bg-orange-50 border border-orange-200 rounded-lg">
                    <h4 class="font-semibold text-orange-800">2. Beszerzési szakasz</h4>
                    <p class="text-orange-700 text-sm">Anyagok minőségének ellenőrzése</p>
                  </div>
                  
                  <div class="p-4 bg-yellow-50 border border-yellow-200 rounded-lg">
                    <h4 class="font-semibold text-yellow-800">3. Kivitelezési szakasz</h4>
                    <p class="text-yellow-700 text-sm">Keverés, szállítás, beépítés, utókezelés</p>
                  </div>
                  
                  <div class="p-4 bg-green-50 border border-green-200 rounded-lg">
                    <h4 class="font-semibold text-green-800">4. Ellenőrzési szakasz</h4>
                    <p class="text-green-700 text-sm">Vizsgálatok, dokumentálás, átadás</p>
                  </div>
                </div>
              </div>
              
              <div>
                <h3 class="text-2xl font-semibold text-gray-700 mb-4">Minőségi Szempontok</h3>
                <p class="text-gray-600 mb-4">
                  A betonminőség több tényező együttes eredménye:
                </p>
                <ul class="space-y-3 text-gray-600">
                  <li>
                    <strong>Szilárdság:</strong><br>
                    <span class="text-sm">Nyomó-, húzó- és hajlítószilárdság</span>
                  </li>
                  <li>
                    <strong>Tartósság:</strong><br>
                    <span class="text-sm">Fagyállóság, korrózióállóság, vízállóság</span>
                  </li>
                  <li>
                    <strong>Dolgozhatóság:</strong><br>
                    <span class="text-sm">Konzisztencia, bedolgozhatóság</span>
                  </li>
                  <li>
                    <strong>Homogenitás:</strong><br>
                    <span class="text-sm">Egyenletes minőség a teljes térfogatban</span>
                  </li>
                  <li>
                    <strong>Méretpontosság:</strong><br>
                    <span class="text-sm">Geometriai megfelelőség</span>
                  </li>
                </ul>
              </div>
            </div>

            <div class="bg-blue-50 border border-blue-200 rounded-lg p-6">
              <h4 class="text-lg font-semibold text-blue-800 mb-2">ISO 9001 alapelvek betonozásban:</h4>
              <div class="grid md:grid-cols-2 gap-4 text-blue-700">
                <ul class="space-y-1">
                  <li>• Folyamatos javítás</li>
                  <li>• Megelőző szemlélet</li>
                  <li>• Dokumentáló rendszer</li>
                </ul>
                <ul class="space-y-1">
                  <li>• Vezetői elkötelezettség</li>
                  <li>• Munkavállalói tudatosság</li>
                  <li>• Adatalapú döntések</li>
                </ul>
              </div>
            </div>
          </div>

          <!-- Section 2: Anyagok ellenőrzése -->
          <div class="bg-white rounded-lg shadow-lg p-8 mb-12">
            <h2 class="text-3xl font-bold text-gray-800 mb-6">2. Alapanyagok Minőségellenőrzése</h2>
            
            <div class="mb-8">
              <h3 class="text-2xl font-semibold text-gray-700 mb-4">Cement Minőségbiztosítás</h3>
              <div class="grid md:grid-cols-2 gap-8">
                <div>
                  <h4 class="text-lg font-semibold text-gray-800 mb-3">Beérkezéskor ellenőrizendő:</h4>
                  <ul class="space-y-2 text-gray-600">
                    <li><strong>Gyártási dátum:</strong> Max 3 hónapos cement</li>
                    <li><strong>Gyártói tanúsítvány:</strong> Megfelelőségi nyilatkozat</li>
                    <li><strong>Tárolási körülmények:</strong> Száraz, fedezhető, szellőző</li>
                    <li><strong>Csomagolás integritása:</strong> Sérülésmentes zsákok</li>
                    <li><strong>Cement típusa:</strong> Specifikációnak megfelelő</li>
                  </ul>
                </div>
                
                <div>
                  <h4 class="text-lg font-semibold text-gray-800 mb-3">Laboratóriumi vizsgálatok:</h4>
                  <div class="space-y-3">
                    <div class="p-3 bg-gray-50 rounded-lg">
                      <h5 class="font-medium text-gray-800">Finomság vizsgálat</h5>
                      <p class="text-gray-600 text-sm">Blaine-féle fajlagos felület > 280 m²/kg</p>
                    </div>
                    
                    <div class="p-3 bg-gray-50 rounded-lg">
                      <h5 class="font-medium text-gray-800">Kötési idő</h5>
                      <p class="text-gray-600 text-sm">Kezdeti: > 75 min, Végső: < 12 óra</p>
                    </div>
                    
                    <div class="p-3 bg-gray-50 rounded-lg">
                      <h5 class="font-medium text-gray-800">Nyomószilárdság</h5>
                      <p class="text-gray-600 text-sm">2 nap: > 10 N/mm², 28 nap: > 42,5 N/mm²</p>
                    </div>
                  </div>
                </div>
              </div>
            </div>

            <div class="mb-8">
              <h3 class="text-2xl font-semibold text-gray-700 mb-4">Adalékanyagok Ellenőrzése</h3>
              <div class="overflow-x-auto">
                <table class="w-full border-collapse border border-gray-300">
                  <thead>
                    <tr class="bg-gray-100">
                      <th class="border border-gray-300 px-4 py-2 text-left">Ellenőrzési szempont</th>
                      <th class="border border-gray-300 px-4 py-2 text-left">Homok</th>
                      <th class="border border-gray-300 px-4 py-2 text-left">Kavics</th>
                      <th class="border border-gray-300 px-4 py-2 text-left">Gyakoriság</th>
                    </tr>
                  </thead>
                  <tbody>
                    <tr>
                      <td class="border border-gray-300 px-4 py-2">Szemmegoszlás</td>
                      <td class="border border-gray-300 px-4 py-2">0-4 mm tartomány</td>
                      <td class="border border-gray-300 px-4 py-2">4-32 mm tartomány</td>
                      <td class="border border-gray-300 px-4 py-2">Minden szállítmány</td>
                    </tr>
                    <tr class="bg-gray-50">
                      <td class="border border-gray-300 px-4 py-2">Szennyezettség</td>
                      <td class="border border-gray-300 px-4 py-2">< 3% agyag, iszap</td>
                      <td class="border border-gray-300 px-4 py-2">< 1% agyag, iszap</td>
                      <td class="border border-gray-300 px-4 py-2">Heti 1x</td>
                    </tr>
                    <tr>
                      <td class="border border-gray-300 px-4 py-2">Nedvességtartalom</td>
                      <td class="border border-gray-300 px-4 py-2">2-6%</td>
                      <td class="border border-gray-300 px-4 py-2">0,5-2%</td>
                      <td class="border border-gray-300 px-4 py-2">Napi</td>
                    </tr>
                    <tr class="bg-gray-50">
                      <td class="border border-gray-300 px-4 py-2">Klórid-tartalom</td>
                      <td class="border border-gray-300 px-4 py-2">< 0,02%</td>
                      <td class="border border-gray-300 px-4 py-2">< 0,01%</td>
                      <td class="border border-gray-300 px-4 py-2">Havi 1x</td>
                    </tr>
                    <tr>
